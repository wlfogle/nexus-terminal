{
  "$schema": "https://schema.tauri.app/config/2.0.0-beta",
  "productName": "NexusTerminal",
  "version": "0.1.0",
  "identifier": "com.nexus.terminal",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev", 
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "windows": [
      {
        "title": "NexusTerminal",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "resizable": true,
        "maximizable": true,
        "minimizable": true,
        "closable": true,
        "decorations": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "category": "DeveloperTool",
    "copyright": "Â© 2025 NexusTerminal",
    "shortDescription": "The intelligent terminal experience",
    "longDescription": "NexusTerminal - Where AI meets the command line. Multi-agent AI coordination, system diagnostics, and intelligent assistance.",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png", 
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
